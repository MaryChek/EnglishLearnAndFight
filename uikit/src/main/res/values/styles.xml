<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowActionBar">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SBCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="cardBackgroundColor">@color/color_bg</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="TextButton.Negative">
        <item name="android:textAppearance">@style/SecondButtonText</item>
        <item name="android:background">@color/color_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@null</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">@null</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAppearance">@style/PrimaryButtonText</item>
        <item name="backgroundTint">@color/color_selector_primary_button</item>
    </style>

    <style name="ButtonPrimary.Second" parent="@style/ButtonPrimary">
        <item name="android:textColor">@color/color_selector_second_text_button</item>
        <item name="backgroundTint">@color/color_selector_second_button</item>
    </style>

    <style name="App.Toolbar.WithCloseButton" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:background">@null</item>
        <item name="android:navigationIcon">@drawable/ic_close</item>
    </style>

    <style name="App.Toolbar.WithBackButton" parent="App.Toolbar.WithCloseButton">
        <item name="android:navigationIcon">@drawable/ic_nav_back</item>
    </style>

    <style name="ProgressBar.Primary" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
</resources>